
<!-- <table width="300" border="1"> -->
<tr>
<td><%= f.collection_select(:category_id, Category.all, :id, :name) %>
</td>
<td><%= f.collection_check_boxes(:group_ids, Group.all, :id, :name) %>
</td>

<td><%= f.label :name, "Name" %>
<%= f.text_field :name %>
</td>

<td><%= f.label :description, "Description" %>
<%= f.text_area :description %>
</td>

<% if @event.errors.any? %>
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>
</tr>
